<%- include('../partials/header.ejs')%>
  <link rel="stylesheet" type="text/css" href="css/Bstyles.css">



  <div class="container-wrapper">



    <% if(items !==undefined && !Array.isArray(items)) { %>


      <a href="/items/<%=items.id%>">
        <div class="itemDisp">
          <img src="<%=items.images%>" style="width:100%" alt="the image">
          <div class="container">
            <h1>
              <%=items.title%>
            </h1>
            <p class="iteminfo">
              <%=items.condition%>
            </p>
            <p class="iteminfo">
              <%=items.price%>
            </p>
          </div>
      </a>
  </div>




  <% } else if (items !==undefined && items.length) { %>

    <% items.sort((a, b)=> { %>
      <% const priceA=parseFloat(a.price.replace); %>
        <% const priceB=parseFloat(b.price.replace); %>
          <% return priceA - priceB;%>
            <% }); %>
              <% items.forEach(item=> { %>
                <a href="/items/<%= item.id %>">
                  <div class="itemDisp">
                    <img src="<%= item.images %>" style="width:100%" alt="the image">
                    <div class="container">
                      <h1>
                        <%= item.title %>
                      </h1>
                      <p class="iteminfo">
                        <%= item.condition %>
                      </p>
                      <p class="iteminfo">$<%= item.price %>
                      </p>
                    </div>
                  </div>
                </a>
                <% }); %>
                  <% } else { %>
                    <div class="noItemsContainer">
                      <p class="noitems">There are no items to display</p>
                    </div>
                    <% } %>

                      </div>
                      <%- include('../partials/footer.ejs')%>